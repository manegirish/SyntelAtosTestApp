<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="peopleItem"
            type="com.test.syntelatostestapp.models.People" />
    </data>

    <com.google.android.material.card.MaterialCardView style="@style/BaseCardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_marginEnd="@dimen/margin_half"
            android:layout_marginBottom="@dimen/margin_half"
            android:background="@color/white"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_people_item_image"
                android:layout_width="@dimen/actionBar"
                android:layout_height="@dimen/actionBar"
                android:layout_gravity="center_vertical|start"
                android:background="@drawable/circle_background">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_people_item_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@mipmap/ic_launcher_round" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_marginStart="@dimen/margin_half"
                android:layout_marginEnd="0dp"
                android:gravity="start|top"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_people_item_name"
                    style="@style/NormalTextView"
                    android:text="@{(peopleItem.firstName == null ? `` : peopleItem.firstName)+` `+(peopleItem.lastName == null ? `` : peopleItem.lastName)}" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_people_item_job"
                    style="@style/SecondaryTextView" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_people_item_email"
                    style="@style/SecondaryTextView" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_people_item_contact"
                    style="@style/SecondaryTextView" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>