<resources>

    <!-- CardView Styles -->
    <style name="BaseCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">@dimen/elevation_min</item>
        <item name="cardMaxElevation">@dimen/elevation_max</item>
        <item name="cardCornerRadius">@dimen/default_radius</item>
        <item name="android:padding">0dp</item>
        <item name="useCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <!-- TextView Style -->
    <style name="TitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">normal</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textViewPrimary</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="ToolbarTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textViewPrimary</item>
        <item name="android:textSize">@dimen/text_size_heading</item>
    </style>

    <style name="NormalTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="textAllCaps">false</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textViewPrimary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="SecondaryTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="textAllCaps">false</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textViewSecondary</item>
        <item name="android:textSize">@dimen/text_size_description</item>
    </style>

    <style name="ErrorTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textViewPrimary</item>
        <item name="android:textSize">@dimen/text_size_heading</item>
    </style>


</resources>