<resources>


    <style name="TitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textViewPrimary</item>
        <item name="android:textSize">@dimen/textSizeTitle</item>
    </style>

    <style name="ToolbarTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textViewPrimary</item>
        <item name="android:textSize">@dimen/textSizeHeading</item>
    </style>

    <style name="NormalTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/textViewPrimary</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

</resources>